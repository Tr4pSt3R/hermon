<h1>Listing heralds</h1>

<table>
  <thead>
    <tr>
      <th>Message</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @heralds.each do |herald| %>
      <tr>
        <td><%= herald.message %></td>
        <td><%= link_to 'Show', herald %></td>
        <td><%= link_to 'Edit', edit_herald_path(herald) %></td>
        <td><%= link_to 'Destroy', herald, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

